ain<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">SEP6</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

   <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
       <ul class="nav flex-column">
           <li class="nav-item px-3">
               <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                   <span class="oi oi-home" aria-hidden="true"></span> Home
               </NavLink>
           </li>
           <li class="nav-item px-3" @onclick="()=> expandSubMenu = !expandSubMenu ">
               <NavLink class="nav-link">
                   <span aria-hidden="true"></span> Flights
               </NavLink>
               @if (expandSubMenu)
               {
                   <ul class="nav flex-column">
                       <li class="nav-item px-3">
                           <NavLink class="nav-link" href="totalflights">
                               <span class="oi oi-graph" aria-hidden="true"></span> Total Flights
                           </NavLink>
                       </li>
                   </ul>
               }
           </li>
           <li class="nav-item px-3" @onclick="()=> expandSubMenu2 = !expandSubMenu2">
               <NavLink class="nav-link">
                   <span aria-hidden="true"></span> Planes
               </NavLink>
               @if (expandSubMenu2)
               {
                   <ul class="nav flex-column">
                       <li class="nav-item px-3">
                           <NavLink class="nav-link" href="planes">
                               <span class="oi oi-spreadsheet" aria-hidden="true"></span> Manufacturer Data
                           </NavLink>
                       </li>
                   </ul>
               }
           </li>
           <li class="nav-item px-3" @onclick="()=> expandSubMenu3 = !expandSubMenu3">
               <NavLink class="nav-link">
                   <span aria-hidden="true"></span> Destinations
               </NavLink>
               @if (expandSubMenu3)
               {
                   <ul class="nav flex-column">
                       <li class="nav-item px-3">
                           <NavLink class="nav-link" href="topdestinations">
                               <span class="oi oi-globe" aria-hidden="true"></span> Top Destinations
                           </NavLink>
                       </li>
                   </ul>
               }
           </li>
           <li class="nav-item px-3" @onclick="()=> expandSubMenu4 = !expandSubMenu4">
               <NavLink class="nav-link">
                   <span aria-hidden="true"></span>Weather
               </NavLink>
               @if (expandSubMenu4)
               {
                   <ul class="nav flex-column">
                       <li class="nav-item px-3">
                           <NavLink class="nav-link" href="temperatures">
                               <span class="oi oi-rain" aria-hidden="true"></span> Temperatures
                           </NavLink>
                       </li>
                   </ul>
               }
           </li>
       </ul>
    
   </div>

@code {
    private bool collapseNavMenu = true;
    private bool expandSubMenu;
    private bool expandSubMenu2;
    private bool expandSubMenu3;
    private bool expandSubMenu4;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}

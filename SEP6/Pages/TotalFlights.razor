        double[] countEWR = data[0].TotalFlights(data, "EWR");
        double[] countLGA = data[0].TotalFlights(data, "LGA");
        _barChartConfig.Data.Datasets.Clear();
        barSet1.AddRange(countJFK.Wrap());
        barSet2.AddRange(countEWR.Wrap());
